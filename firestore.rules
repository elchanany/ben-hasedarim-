rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isLoggedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      let role = getUserData().role;
      return role == 'admin' || role == 'super_admin';
    }
    
    // Users Collection - PRIVATE
    // Only the user themselves or an admin can read the full profile (including phone/email)
    match /users/{userId} {
      allow read: if isLoggedIn() && (isOwner(userId) || isAdmin());
      allow create: if isLoggedIn() && isOwner(userId);
      allow update: if isLoggedIn() && (isOwner(userId) || isAdmin());
    }
    
    // Public Profiles - PUBLIC READ
    // Contains only safe data (name, join date, etc.)
    match /public_profiles/{userId} {
      allow read: if true; 
      allow write: if isLoggedIn() && (isOwner(userId) || isAdmin());
    }
    
    // Jobs Collection
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if isLoggedIn();
      allow update, delete: if isLoggedIn() && (
        resource.data.postedBy.id == request.auth.uid || 
        isAdmin()
      );
    }
    
    // Reports Collection
    match /reports/{reportId} {
      allow create: if isLoggedIn();
      allow read, update: if isLoggedIn() && isAdmin();
    }
    
    // Chat Threads
    match /chats/{threadId} {
      allow create: if isLoggedIn();
      allow read: if isLoggedIn() && request.auth.uid in resource.data.participantIds;
      allow update: if isLoggedIn() && request.auth.uid in resource.data.participantIds;
      
      // Chat Messages
      match /messages/{messageId} {
        allow read: if isLoggedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(threadId)).data.participantIds;
        
        allow create: if isLoggedIn() && 
          // Check if user is the sender
          request.resource.data.senderId == request.auth.uid &&
          // Check if user is a participant in the parent thread
          request.auth.uid in get(/databases/$(database)/documents/chats/$(threadId)).data.participantIds;
      }
    }
  }
}
